---
const { title, subtitle, light = false } = Astro.props;
---
<div class={"text-center mb-12 " + (light ? "text-estetica-white" : "text-estetica-dark")}>
  <h2 class="inline-block text-3xl font-bold mb-4 relative">
    {title}
    <span class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-20 h-1 bg-estetica-secondary rounded"></span>
  </h2>
  {subtitle && <p class={(light ? "text-estetica-white" : "text-estetica-dark") + " mt-2"}>{subtitle}</p>}
</div>
